---
layout: base.liquid
---

{% if image %}
	{% include 'image-details' with image, classes:'post-image frame' %}
{% endif %}
<article class="post alignnarrow">
	<header class="post-header">
		{% if image %}
			<div class="spacer"><span class="light">●●●●</span>○○○○○○○○○○○○○○○○○○○○○○</div>
		{% endif %}
		<h1>{{ title }}</h1>
		<h2 class="post-date smallcaps">{{ date | date: "%A, %B %d, %Y" | downcase}}</h2>
	
		{% if song %}
			{% include 'audio-player' with song %}
		{% endif %}
	</header>
	{{ content }}
	

</article>