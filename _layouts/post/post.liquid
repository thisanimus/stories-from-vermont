---
layout: base/base.liquid
---
<article class="post">
{% if image %}
	{% include 'image_details/image_details' with image, classes:'post-image frame fade' %}
{% endif %}

	<header class="post-header alignnarrow">
		{% if image %}
			<div class="spacer"><span class="light">●●●●</span>○○○○○○○○○○○○○○○○○○○○○○</div>
		{% endif %}
		<h1>{{ title }}</h1>
		<h2 class="post-date smallcaps">{{ date | date: "%A, %B %d, %Y" | downcase}}</h2>
	
		{% if song %}
			{% include 'audio_player/audio_player' with song %}
		{% endif %}
	</header>
	<section class="content alignnarrow">
		{{ content }}
	</section>
	

</article>